surface check
(
    color baseColour = color(0,0,0),
    color stripeColour = color(1,1,1),
    float repeatU = 5.5,
    float repeatV = 1.0,
    output color resultRGB = 0
)
{
    // Build a continuous spiral coordinate
    float spiralCoord = mod(u * repeatU + v * repeatV, 1.0);

    // Use a sine wave for smooth, periodic blending
    float blend = 0.5 + 0.5 * sin(spiralCoord * 2.0 * M_PI);

    // Mix the two colors with smooth blend
    resultRGB = mix(baseColour, stripeColour, blend);
}
